# Deployzilla Engine - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration (Redis & Mongo)
# =============================================================================
REDIS_PASSWORD=admin
MONGODB_URI=mongodb://mongo:27017/deployzilla

# =============================================================================
# SonarQube Configuration
# =============================================================================
SONAR_USERNAME=admin
SONAR_PASSWORD=your_secure_sonar_password
SONAR_DB_USER=sonar
SONAR_DB_PASSWORD=sonar

# Optional: Override default SonarQube URL
# SONAR_URL=http://sonarqube:9000

# =============================================================================
# Docker Registry (for pushing/pulling built images)
# =============================================================================
DOCKER_REGISTRY_USER=your_docker_hub_username
DOCKER_REGISTRY_PASSWORD=your_docker_hub_password

# =============================================================================
# Remote VPS Deployment (SSH Tunnel)
# =============================================================================
DEPLOYZILLA_REMOTE_USER=deployzilla
DEPLOYZILLA_REMOTE_PASSWORD=your_ssh_password
DEPLOYZILLA_REMOTE_HOST=your_remote_host
DEPLOYZILLA_REMOTE_PORT=22
